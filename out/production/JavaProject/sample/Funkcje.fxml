    <Button layoutX="100.0" layoutY="280.0" text="=" onAction="#sinus"/>
    <Button layoutX="280.0" layoutY="280.0" text="=" onAction="#cosinus"/>
    <Button layoutX="460.0" layoutY="280.0" text="=" onAction="#tangens" />
