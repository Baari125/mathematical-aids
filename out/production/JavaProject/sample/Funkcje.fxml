    <Label layoutX="300.0" layoutY="50.0" text="sin α = y/r" />
    <Label layoutX="400.0" layoutY="50.0" text="cos α = y/r" />
    <Label layoutX="500.0" layoutY="50.0" text="tg α = y/r" />

