    <Button onAction="#numberButton" layoutX="150.0" layoutY="200.0" prefWidth="50.0" prefHeight="20.0" text="3" font="$FONT"/>
    <Button onAction="#actionButton" layoutX="210.0" layoutY="200.0" prefWidth="50.0" prefHeight="20.0" text="-" font="$FONT"/>

    <Button onAction="#numberButton" layoutX="30.0" layoutY="150.0" prefWidth="50.0" prefHeight="20.0" text="4" font="$FONT"/>
    <Button onAction="#numberButton" layoutX="90.0" layoutY="150.0" prefWidth="50.0" prefHeight="20.0" text="5" font="$FONT"/>
    <Button onAction="#numberButton" layoutX="150.0" layoutY="150.0" prefWidth="50.0" prefHeight="20.0" text="6" font="$FONT"/>
    <Button onAction="#actionButton" layoutX="210.0" layoutY="150.0" prefWidth="50.0" prefHeight="20.0" text="*" font="$FONT"/>

    <Button onAction="#numberButton" layoutX="30.0" layoutY="100.0" prefWidth="50.0" prefHeight="20.0" text="7" font="$FONT"/>
